<div class="container pb-5">

  <div class="col">
    <h3 class="mt-5">ノート一覧</h3>
    <table class="table table-hover mt-3">
      <tead class="thead-light">
        <tr>
          <th scope="col">ノートID</th>
          <th scope="col">タイトル</th>
          <th scope="col">投稿日時</th>
          <th scope="col">投稿ユーザー</th>
          <th scope="col"></th>
        </tr>
      </tead>
      <% @notes.each do |note| %>
        <tbody>
          <tr>
            <td><%= note.id %></td>
            <td class="font-weight-bold"><%= link_to (note.title), admins_note_path(note), class: 'text-dark' %></td>
            <td class="text-black-50"><%= note.created_at.in_time_zone('Asia/Tokyo').strftime('%Y年%m月%d日 %H時%M分') %></td>
            <td><%= link_to (note.user.name), admins_user_path(note.user.id), class: 'text-dark' %></td>
            <td><%= link_to '削除', admins_note_path(note), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "本当に削除しますか？" } %></td>
          </tr>
        </tbody>
      <% end %>
    </table>

    <div class="d-flex justify-content-center">
      <%= paginate @notes %>
    </div>

  </div>

</div>