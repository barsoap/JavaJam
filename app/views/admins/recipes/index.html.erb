<div class="container pb-5">

  <div class="col">
    <h3 class="mt-5">レシピ一覧</h3>
    <table class="table table-hover mt-3">
      <tead class="thead-light">
        <tr>
          <th scope="col">レシピID</th>
          <th scope="col">レシピ名</th>
          <th scope="col">コメント数</th>
          <th scope="col">投稿ユーザー</th>
          <th scope="col"></th>
        </tr>
      </tead>
      <% @recipes.each do |recipe| %>
        <tbody>
          <tr>
            <td><%= recipe.id %></td>
            <td><%= link_to (recipe.title), admins_recipe_path(recipe) %></td>
            <td><%= recipe.recipe_comments.count %></td>
            <td><%= link_to (recipe.user.name), admins_user_path(recipe.user.id) %></td>
            <td><%= link_to '確認', admins_recipe_path(recipe), class: 'btn btn-outline-info btn-sm' %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>

</div>