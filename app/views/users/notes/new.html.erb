<div class="container py-5">
  <div class="row d-flex justify-content-center">

    <div class="col-md-8">
      <h3 class="text-center pb-5">ノート投稿</h3>

      <div class="text-center bg-primary"><!--エラー文-->
        <% if @note.errors.any? %>
          <ul class="list-unstyled">
            <% @note.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @note, url: notes_path, method: :post do |f| %>

      <div class="form-group">
        <div class="row">
          <div class="col-md-4 d-flex justify-content-start justify-content-md-end align-items-center">
            <%= f.label :title, 'タイトル', class: 'm-0' %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-4 d-flex justify-content-start justify-content-md-end align-items-center">
            <%= f.label :contents, 'ノート', class: 'm-0' %>
          </div>
          <div class="col-md-8">
            <%= f.text_area :contents, class: 'form-control', rows: 20 %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row mt-3">
          <div class="col-md-8 offset-0 offset-md-4">
            <button type="submit" class="btn btn-primary btn-block">投稿する</button>
          </div>
        </div>
      </div>

      <% end %>

    </div>

  </div>
</div>