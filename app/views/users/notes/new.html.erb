<div class="container py-5">
  <div class="row d-flex justify-content-center">

    <div class="col-md-8">
      <h3 class="text-center pb-5">ノート投稿</h3>
      <!--エラー文-->
      <% if @note.errors.any? %>
        <div class="text-center validate-errors-message">
          <ul class="list-unstyled m-0">
            <% @note.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @note, url: notes_path, method: :post do |f| %>
      <!--タイトル-->
      <div class="form-group">
        <div class="row">
          <div class="col-md-4 d-flex justify-content-start justify-content-md-end align-items-center">
            <%= f.label :title, 'タイトル', class: 'm-0' %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>
      </div>
      <!--画像追加-->
      <div class="form-group">
        <div class="row">
          <div class="offset-0 offset-md-4 col-md-8">
            <div class="custom-file">
              <%= f.file_field :note_image, accept: "image/*", class: 'custom-file-input', onchange: 'fileOnChange(this);' %>
              <%= f.label :note_image, '画像を選択してください', class: 'custom-file-label' %>
            </div>
          </div>
        </div>
      </div>
      <!--ノートの内容-->
      <!--<div class="form-group">-->
      <!--  <div class="row">-->
      <!--    <div class="col-md-4 d-flex justify-content-start justify-content-md-end align-items-center">-->
      <!--      <%#= f.label :contents, 'ノート', class: 'm-0' %>-->
      <!--    </div>-->
      <!--    <div class="col-md-8">-->
      <!--      <%#= f.text_area :contents, class: 'form-control', rows: 10 %>-->
      <!--    </div>-->
      <!--  </div>-->
      <!--</div>-->

      <div class="form-group">
        <div class="row">
          <div class="col-md-4 d-flex justify-content-start justify-content-md-end align-items-center">
            <%= f.label :contents, 'ノート', class: 'm-0' %>
          </div>
          <div class="col-md-8">
            <%#= f.text_area :contents, class: 'form-control', rows: 10 %>
            <%= f.rich_text_area :contents %>
          </div>
        </div>
      </div>


      <!--投稿ボタン-->
      <div class="form-group">
        <div class="row mt-3">
          <div class="col-md-8 offset-0 offset-md-4">
            <button type="submit" class="btn btn-primary btn-block">投稿する</button>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  //画像の名前/以降が表示されるようにする
  function fileOnChange (elem) {
    $(elem).next('.custom-file-label').html($(elem).val().split('\\').pop());
  };
</script>