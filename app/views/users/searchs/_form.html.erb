<%= form_with url:search_path, method: :get, local: true do |f| %>
  <%= f.text_field :content, class: 'form_control' %>
  <%= f.select :model,
                     options_for_select({'ユーザー'=>'user','レシピ'=>'recipe','アイテム'=>'equipment','ノート'=>'note'}),
                     class: 'form-control form-control-sm'
  %>
  <%= f.select :method,
               options_for_select({'完全一致'=>'perfect','前方一致'=>'forward','後方一致'=>'backword','部分一致'=>'partial'}),
               class: 'form-control form-control-sm'
  %>
  <%= f.submit '検索', class: 'btn btn-primary' %>
<% end %>