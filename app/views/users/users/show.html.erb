<div class="container py-5">
  <div class="row">
    <!--左側のユーザー情報-->
    <div class="col-md-3 left-side py-3">
      <div><%= image_tag @user.get_profile_image(100, 100), class: 'rounded-circle img-fluid d-block mx-auto' %></div><!--アイコン-->
      <div class="text-center mt-3 font-weight-bold"><%= @user.name %></div><!--ユーザーネーム-->
      <div class="text-center mt-3"><%= simple_format(@user.profile, sanitize: true, class: 'm-0') %></div><!--プロフィール-->
      <!--本人の場合のみ編集ボタン表示-->
      <% unless @user.guest_user? %>
        <div class="row mt-3">
          <div class="col-md-8 mx-auto">
            <%= link_to 'ユーザー情報編集', edit_user_path(@user), class: "btn btn-secondary btn-block" %>
          </div>
        </div>
      <% end %>
      <% if user_signed_in? %>
        <div id="follow-btn" class="mt-3 text-center">
          <%= render 'users/follows/btn', user: @user %>
        </div>
      <% end %>
      <div class="d-flex justify-content-around">
        <!--フォロー/フォロワー-->
        <div class="col-6 mt-3 text-center">
          <a href="<%= user_follows_path(@user) %>">
            <i class="h4 fa-solid fa-user-group m-0"></i><br>
            Follow/Follower
          </a> <!--btn btn-outline-secondary-->
        </div>
        <!--ブックマーク-->
        <div class="col-6 mt-3 text-center">
          <a href="<%= recipes_bookmarks_path %>">
            <i class="h4 fa-solid fa-star"></i><br>
            Bookmark
          </a>
        </div>
      </div>
    </div>
    <!--右側のレシピ、ノート、アイテム、ブックマーク(レシピ、アイテム)一覧-->
    <div class="col-md-8 offset-1">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" href="#">レシピ</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="#">ノート</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="#">アイテム</a>
        </li>
      </ul>
    </div>

  </div>
</div>
