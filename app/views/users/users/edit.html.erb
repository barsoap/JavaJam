<div class="container py-5">
  <div class="row">

    <div class="col-md-8 mx-auto">
      <h3>ユーザー情報編集</h3>
      <div class="form">
        <%= form_with model: @user, url: user_path, method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :profile %>
            <%= f.text_field :profile %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email %>
          </div>
          <button type="submit" class="btn btn-primary">変更する</button>
        <% end %>
      </div>
    </div>

  </div>
</div>
